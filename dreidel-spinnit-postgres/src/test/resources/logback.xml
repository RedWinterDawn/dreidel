<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d %p [%t] %C{1} - %m\n</pattern>
    </encoder>
  </appender>
  <logger name="org.apache" level="WARN"/>
  <logger name="org.eclipse" level="WARN"/>
  <logger name="com.jive.ftw.metrics" level="INFO"/>
  <logger name="com.jive.myco" level="INFO"/>
  <logger name="com.jive.jotter" level="INFO"/>
  <logger name="com.jive.jazz" level="INFO"/>
  <root level="TRACE">
    <appender-ref ref="stdout"/>
  </root>
</configuration>